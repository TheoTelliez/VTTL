{% extends "base.html.twig" %}
{% block style %}<link href="css/main.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Utilisateurs Admin {% endblock %}  

{% block contenu %}
    {% if form.valide is defined %}
        {% if form.valide == true %}
            <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
        {% else %}
            <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1>
        {% endif %}
    {% endif %} 

    <h1 class="h1 mb-3 font-weight-normal"> </h1>

    <center>

        <h2>Utilisateurs Administrateur</h2>
        <h3>Liste des utilisateurs inscrit sur le site :</h3>

        <h1 class="h1 mb-3 font-weight-normal"> </h1>

        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr><th>Email</th><th>Nom</th><th>Prénom</th><th>Rôle</th><th>Dernière connexion</th><th>Édition</th></tr>
                        {% for u in liste %}
                    <tr><td>{{u.email}}</td><td>{{u.nom}}</td><td>{{u.prenom}}</td><td>{{u.libellerole}}</td><td>{{u.datedernier}}</td><td><a href="index.php?page=utilisateuradmin&email={{u.email}}" class="icon fa-trash"><span class="label">Supprimer</span></a><a></a>     <a href="index.php?page=modifprofil&email={{u.email}}" class="icon fa-pencil"><span class="label">Modifier</span></a></td></tr>
                {% endfor %}
            </table>

        </div>


    </center>


    <p><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /></p>
</form>



{% endblock %}